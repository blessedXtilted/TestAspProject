@model ASP_PROJECT_MPT.Models.User
@{
    ViewBag.Title = "Авторизация";
}
<link rel="stylesheet" href="~/css/style1.css" />  
     

<form asp-action="auth" asp-controller="home">
    <div class="bottom text-center">
        <input type="text" asp-for="Login" placeholder="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger" />
    </div>
    <div class="bottom text-center">
        <input type="password" asp-for="Password" placeholder="******" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"/>
    </div>
    <div class="bottom text-center">
        <input type="submit" value="Войти" class="btn btn-default"/>
    </div>
    <div class="bottom text-center">
        <p>Нет аккаунта?<a asp-action="registr">Регистрация</a></p>
    </div>
</form>